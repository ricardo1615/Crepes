<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="40%sh"
        app:layout_widthPercent="2%sw" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="40%sh"
        app:layout_widthPercent="29%sw">

        <ImageView
            android:id="@+id/cart_item3_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="19"
            android:background="@drawable/image_shape"
            android:src="@mipmap/img_lauch_bitch" />

        <TextView
            android:id="@+id/cart_item3_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="3"
            android:singleLine="true"
            android:text="黑色五叶草"
            android:textColor="#b000"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="40%sh"
        app:layout_widthPercent="2%sw" />

</com.zhy.android.percent.support.PercentLinearLayout>