<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lenovo.crepes.fragments.CartFragment">

    <LinearLayout
        android:id="@+id/cart_One"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/cart_radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/cart_recommond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:drawableBottom="@drawable/cart_background"
                android:textColor="@drawable/font_color"
                android:text="推荐"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/cart_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/cart_background"
                android:textColor="@drawable/font_color"
                android:text="更新"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/cart_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/cart_background"
                android:gravity="center"
                android:textColor="@drawable/font_color"
                android:text="分类"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/cart_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/cart_background"
                android:textColor="@drawable/font_color"
                android:text="排行"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/cart_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/cart_background"
                android:textColor="@drawable/font_color"
                android:gravity="center"
                android:text="专题"
                android:textSize="20dp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/cart_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@mipmap/img_magnifier" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@mipmap/img_work_instru_bac" />

    <android.support.v4.view.ViewPager
        android:id="@+id/cart_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>


</com.zhy.android.percent.support.PercentLinearLayout>
