<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_normalnews_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        app:layout_heightPercent="17%w"
        app:layout_widthPercent="25%w" />

    <TextView
        android:id="@+id/tv_normalnews_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_normalnews_photo"
        android:text="凡王之血，必以剑终。"
        android:textColor="#333333" />

    <ImageView
        android:id="@+id/iv_news_author_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/iv_normalnews_photo"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_normalnews_photo"
        android:src="@mipmap/bitch_01"
        app:layout_heightPercent="4%w"
        app:layout_widthPercent="4%w" />

    <TextView
        android:id="@+id/tv_news_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_news_author_photo"
        android:layout_toRightOf="@id/iv_news_author_photo"
        android:text="青铜与火之王"
        android:textColor="#a8a8a8"
        app:layout_textSizePercent="3%w" />

    <TextView
        android:id="@+id/tv_normalnews_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_news_author_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="2009-10-10"
        android:textColor="#a8a8a8"
        app:layout_textSizePercent="3%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>