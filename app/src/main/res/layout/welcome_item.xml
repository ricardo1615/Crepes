<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wel_c3"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/img_guide_w1"
        app:layout_heightPercent="10%sh" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/img_guide_p1"
        app:layout_heightPercent="53%sh"
        app:layout_widthPercent="53%sw" />

    <ImageView
        android:id="@+id/image_btn"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:src="@mipmap/img_guide_b1"
        android:visibility="visible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="@mipmap/img_guide_big_clow"
        app:layout_heightPercent="15%sh" />
</com.zhy.android.percent.support.PercentLinearLayout>