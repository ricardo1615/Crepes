<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_fast_author_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:src="@mipmap/bitch_01"
        app:layout_heightPercent="6%w"
        app:layout_widthPercent="6%w" />

    <TextView
        android:id="@+id/tv_fast_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_fast_author_photo"
        android:text="大地与山之王" />

    <TextView
        android:id="@+id/tv_fast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_fast_author_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="2009-10-10"
        android:textColor="#a8a8a8"
        app:layout_textSizePercent="3%w" />

    <TextView
        android:id="@+id/tv_fast_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fast_author_photo"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:text="或许不知梦的缘故，流离之人追逐幻影。" />

    <ImageView
        android:id="@+id/iv_fast_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_fast_title"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:layout_heightPercent="17%w"
        app:layout_widthPercent="25%w" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/iv_fast_photo"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_heightPercent="10%w">

        <Button
            android:id="@+id/btn_fast_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/img_share_icon"
            android:text="分享"
            android:textColor="#a8a8a8"
            app:layout_paddingLeftPercent="15%w" />

        <Button
            android:id="@+id/btn_fast_discuss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/img_discuss_gray"
            android:text="评论（0）"
            android:textColor="#a8a8a8"
            app:layout_paddingLeftPercent="15%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>