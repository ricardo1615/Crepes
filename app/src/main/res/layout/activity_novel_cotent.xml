<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.lenovo.crepes.NovelCotentActivity">

    <com.lenovo.crepes.customerView.ReadView
        android:id="@+id/tv_novel_content"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/novel_content_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <SeekBar
            android:id="@+id/sb_bright"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_text_size_up"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/novel_content_button"
                android:text="字体+"
                android:textColor="#F5F5F5" />

            <Button
                android:id="@+id/btn_text_size_down"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/novel_content_button"
                android:text="字体-"
                android:textColor="#F5F5F5" />

            <RadioGroup
                android:id="@+id/rg_novel_background"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_day"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:text="白天"
                    android:textColor="#F5F5F5" />

                <RadioButton
                    android:id="@+id/rb_night"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="夜间"
                    android:textColor="#F5F5F5" />

                <RadioButton
                    android:id="@+id/rb_eyes"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="护眼"
                    android:textColor="#F5F5F5" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
