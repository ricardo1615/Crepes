<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/img_strip_cart" />

        <TextView
            android:id="@+id/cart_tiaomanzhuanqu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="条漫专区"
            android:textSize="20sp" />
            android:layout_height="28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/tiaomanzhuanqu1"
            layout="@layout/fragment_cart_item2" />

        <include
            android:id="@+id/tiaomanzhuanqu2"
            layout="@layout/fragment_cart_item2" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/tiaomanzhuanqu3"
            layout="@layout/fragment_cart_item2" />

        <include
            android:id="@+id/tiaomanzhuanqu4"
            layout="@layout/fragment_cart_item2" />

    </LinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>