<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_comic_cover"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_comic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_comic_cover"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_comic_cover"
        android:text="一拳超人"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_comic_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comic_name"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/iv_comic_cover"
        android:src="@mipmap/img_icon_head" />

    <TextView
        android:id="@+id/tv_comic_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_comic_author"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/iv_comic_author"
        android:text="村田熊介/ONE"
        android:textColor="#999999"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_comic_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_comic_author"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/iv_comic_cover"
        android:src="@mipmap/img_icon_tag" />

    <TextView
        android:id="@+id/tv_comic_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_comic_tag"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/iv_comic_tag"
        android:text="冒险/欢乐向/战斗"
        android:textColor="#999999"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_comic_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_comic_tag"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/iv_comic_cover"
        android:src="@mipmap/img_icon_clock" />

    <TextView
        android:id="@+id/tv_comic_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_comic_clock"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/iv_comic_clock"
        android:text="2016-03-12"
        android:textColor="#999999"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>